{
  "name": "overlap",
  "type": "module",
  "version": "1.3.0",
  "description": "Track team activity and detect overlapping work in Claude Code sessions",
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "typecheck": "astro check && tsc --noEmit",
    "deploy": "wrangler deploy",
    "db:migrate:local": "wrangler d1 execute overlap-db --local --file=migrations/001_initial.sql",
    "db:migrate:remote": "wrangler d1 execute overlap-db --remote --file=migrations/001_initial.sql"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/cloudflare": "^12.0.0",
    "@astrojs/react": "^4.0.0",
    "astro": "^5.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260116.0",
    "@playwright/test": "^1.57.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "playwright": "^1.57.0",
    "typescript": "^5.7.0",
    "wrangler": "^4.0.0"
  }
}
